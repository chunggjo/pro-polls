<section id="hero" class="d-flex justify-cntent-center align-items-center">
    <div id="heroCarousel" class="container carousel carousel-fade" data-ride="carousel">

        <!-- Slide 1 -->
        <div class="carousel-item active">
            <div class="carousel-container">
                <h2 class="animated fadeInDown">{{headerText}}</h2>
                <p class="animated fadeInDown">Enter poll ID to get started.</p>
                <form class="index-form animated fadeInUp" type="submit" method="post" action="">
                    <input type="text" placeholder="Poll ID">
                    <button class="input-button">Go</button>
                </form>

                {{#unless newUser}}
                <aside>
                    <p>Your recently viewed polls:</p>
                    <ul>
                        {{#each viewedPolls}}
                        <li class="viewedPoll"><a href='/polls/{{this.id}}'>{{this.title}}</a></li>
                        {{/each}}
                    </ul>
                </aside>
                {{/unless}}
            </div>
        </div>
    </div>

</section><!-- End Hero -->

<section>
    <div class="container">
        <aside>
            <h2>Our most popular polls:</h2>
            <ul>
                {{#each popularPolls}}
                <li class="popularPoll"><a href="/polls/{{polls.id}}">{{polls.title}}</a></li>
                {{/each}}
            </ul>
        </aside>
    </div>
</section>


<script src="/js/common/goToPoll.js"></script>
<script src="/js/common/popularPolls.js"></script>